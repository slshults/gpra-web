            var e500countdownEl = document.getElementById('e500-countdown-text');
            var e500interval = setInterval(function() {
                e500seconds -= 1;
                if (e500seconds <= 0) {
                    clearInterval(e500interval);
                    window.location.href = '/';
                } else {
