<!-- Standalone Page Header -->
<style>
    /* Mobile menu responsive behavior - inline styles to avoid CSS cascade issues with CookieConsent.css */
    #mobile-menu-btn { display: block; }
    .desktop-nav { display: none; }
    @media (min-width: 640px) {
        #mobile-menu-btn { display: none; }
        .desktop-nav { display: flex; }
        #mobile-menu { display: none !important; }
    }
    /* Theme toggle positioning - consolidated here to avoid duplication across standalone templates */
    .theme-toggle {
        position: fixed;
        top: 20px;
        left: 20px;
        opacity: 0.6;
        transition: opacity 0.2s;
        z-index: 1000;
        cursor: pointer;
    }
    .theme-toggle:hover {
        opacity: 1.0;
    }
</style>
<header class="bg-gray-800 border-b border-gray-700 sticky top-0 z-50">
    <div class="max-w-4xl mx-auto px-4 py-4 flex items-center justify-between">
        <a href="/" class="flex items-center gap-3 hover:opacity-80 transition-opacity">
            <span class="text-3xl">üé∏</span>
            <span class="text-xl font-semibold text-orange-400">Guitar Practice Routine App</span>
        </a>

        <!-- Desktop nav (hidden on mobile) -->
        <nav class="desktop-nav gap-4 text-sm items-center">
            <a href="/about" class="{{ 'text-orange-400 font-medium' if current_page == 'about' else 'text-gray-400 hover:text-white transition-colors' }}">About</a>
            <a href="/why" class="{{ 'text-orange-400 font-medium' if current_page == 'why' else 'text-gray-400 hover:text-white transition-colors' }}">Why</a>
            <a href="/faq" class="{{ 'text-orange-400 font-medium' if current_page == 'faq' else 'text-gray-400 hover:text-white transition-colors' }}">Help</a>
            <a href="/pricing" class="{{ 'text-orange-400 font-medium' if current_page == 'pricing' else 'text-gray-400 hover:text-white transition-colors' }}">Pricing</a>
            <a href="/terms" class="{{ 'text-orange-400 font-medium' if current_page == 'terms' else 'text-gray-400 hover:text-white transition-colors' }}">Terms</a>
            <a href="/privacy" class="{{ 'text-orange-400 font-medium' if current_page == 'privacy' else 'text-gray-400 hover:text-white transition-colors' }}">Privacy</a>
            {% if current_user.is_authenticated %}
            <a href="/#Account" class="text-gray-400 hover:text-white transition-colors" title="Account settings">‚öôÔ∏è</a>
            <a href="/logout" class="text-gray-400 hover:text-white transition-colors">Logout</a>
            {% else %}
            <a href="/login" class="text-gray-400 hover:text-white transition-colors">Login</a>
            <a href="/signup" class="bg-orange-600 hover:bg-orange-500 text-white px-3 py-1 rounded text-sm transition-colors">Sign up</a>
            {% endif %}
        </nav>

        <!-- Mobile hamburger button (visible on mobile only) -->
        <button id="mobile-menu-btn" class="text-gray-400 hover:text-white p-2" aria-label="Menu" aria-expanded="false" aria-controls="mobile-menu">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path id="hamburger-icon" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
                <path id="close-icon" class="hidden" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
            </svg>
        </button>
    </div>

    <!-- Mobile menu dropdown (hidden by default) -->
    <nav id="mobile-menu" class="hidden border-t border-gray-700">
        <div class="max-w-4xl mx-auto px-4 py-3 flex flex-col gap-3 text-sm">
            <a href="/about" class="{{ 'text-orange-400 font-medium' if current_page == 'about' else 'text-gray-400 hover:text-white transition-colors' }}">About</a>
            <a href="/why" class="{{ 'text-orange-400 font-medium' if current_page == 'why' else 'text-gray-400 hover:text-white transition-colors' }}">Why</a>
            <a href="/faq" class="{{ 'text-orange-400 font-medium' if current_page == 'faq' else 'text-gray-400 hover:text-white transition-colors' }}">Help</a>
            <a href="/pricing" class="{{ 'text-orange-400 font-medium' if current_page == 'pricing' else 'text-gray-400 hover:text-white transition-colors' }}">Pricing</a>
            <a href="/terms" class="{{ 'text-orange-400 font-medium' if current_page == 'terms' else 'text-gray-400 hover:text-white transition-colors' }}">Terms</a>
            <a href="/privacy" class="{{ 'text-orange-400 font-medium' if current_page == 'privacy' else 'text-gray-400 hover:text-white transition-colors' }}">Privacy</a>
            <div class="border-t border-gray-700 pt-3 flex gap-4">
                {% if current_user.is_authenticated %}
                <a href="/#Account" class="text-gray-400 hover:text-white transition-colors" title="Account settings">‚öôÔ∏è Settings</a>
                <a href="/logout" class="text-gray-400 hover:text-white transition-colors">Logout</a>
                {% else %}
                <a href="/login" class="text-gray-400 hover:text-white transition-colors">Login</a>
                <a href="/signup" class="bg-orange-600 hover:bg-orange-500 text-white px-3 py-1 rounded text-sm transition-colors">Sign up</a>
                {% endif %}
            </div>
        </div>
    </nav>
</header>

<script>
// Mobile menu toggle
(function() {
    var btn = document.getElementById('mobile-menu-btn');
    var menu = document.getElementById('mobile-menu');
    var hamburgerIcon = document.getElementById('hamburger-icon');
    var closeIcon = document.getElementById('close-icon');
    if (btn && menu) {
        btn.addEventListener('click', function() {
            var isOpen = !menu.classList.contains('hidden');
            menu.classList.toggle('hidden');
            hamburgerIcon.classList.toggle('hidden');
            closeIcon.classList.toggle('hidden');
            btn.setAttribute('aria-expanded', !isOpen);
        });

        // Close mobile menu if window resizes past the sm breakpoint
        window.addEventListener('resize', function() {
            if (window.innerWidth >= 640 && !menu.classList.contains('hidden')) {
                menu.classList.add('hidden');
                hamburgerIcon.classList.remove('hidden');
                closeIcon.classList.add('hidden');
                btn.setAttribute('aria-expanded', 'false');
            }
        });
    }
})();
</script>
