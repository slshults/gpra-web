    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website">
    <meta property="og:url" content="https://guitarpracticeroutine.com/">
    <meta property="og:title" content="Guitar Practice Routine App">
    <meta property="og:description" content="GPRA helps guitarists organize practice routines, track progress, use focus timers, and create chord charts. For beginners to intermediate players.">
    <meta property="og:image" content="https://guitarpracticeroutine.com/static/images/og-strat.png">

    <!-- Driver.js CSS (from CDN) -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/driver.js@1.3.1/dist/driver.css">
    <!-- Custom Driver.js theme -->
    <link rel="stylesheet" href="{{ url_for('static', filename='css/driver-theme.css') }}">
    <!-- Tailwind CSS -->
    <link rel="stylesheet" href="{{ url_for('static', filename='dist/css/main.css') }}">
    {% block extra_css %}{% endblock %}

    <!-- Debug mode flag for frontend -->
    <script>
        window.GPRA_DEBUG = {{ 'true' if debug else 'false' }};
    </script>

    <!-- Google AdSense Auto Ads (free tier only) -->
    {% if ads_enabled and adsense_publisher_id %}
    <script async src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client={{ adsense_publisher_id }}"
         crossorigin="anonymous"></script>
    <style>
        /* Hide ads on mobile devices for better UX */
        @media screen and (max-width: 768px) {
            .adsbygoogle { display: none !important; }
        }
    </style>
    {% endif %}

