    <script>
        // Handle URL parameter to expand and scroll to a specific FAQ item
        (function() {
            const params = new URLSearchParams(window.location.search);
            const expandParam = params.get('expand');
            if (expandParam) {
                const targetElement = document.getElementById(expandParam);
                if (targetElement && targetElement.tagName === 'DETAILS') {
                    // Open the target details element
                    targetElement.setAttribute('open', '');

                    // Also ensure parent details elements are open (for nested structure)
                    let parent = targetElement.parentElement;
                    while (parent) {
                        if (parent.tagName === 'DETAILS') {
                            parent.setAttribute('open', '');
                        }
                        parent = parent.parentElement;
                    }

                    // Scroll to the element after a brief delay to allow DOM updates
                    setTimeout(function() {
                        targetElement.scrollIntoView({ behavior: 'smooth', block: 'center' });

                        // Add a brief highlight effect
                        targetElement.style.transition = 'background-color 0.3s ease';
                        targetElement.style.backgroundColor = 'rgba(249, 115, 22, 0.2)'; // orange highlight
                        setTimeout(function() {
                            targetElement.style.backgroundColor = '';
                        }, 2000);
                    }, 100);
                }
            }
        })();
